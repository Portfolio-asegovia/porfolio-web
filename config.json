{
    "browsersync": {
        "proxy": "localhost/lui",
        "port": 3000
    },
    "image": {
        "src": "src/images",
        "dist": "assets/images"
    },
    "js": {
        "entry": "src/js/*.js",
        "output": "assets/js"
    },
    "css": {
        "src": "src/sass",
        "dist": "assets/css",
        "style": "compressed",
        "map": "--map"
    },
    "tailwind": {
        "src": "src/css/tailwind.css",
        "dist": "assets/css/tailwind.css"
    },
    "twig": {
        "src": "src/"
    }
}